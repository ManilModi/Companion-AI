@model DotnetMVCApp.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="flex min-h-screen items-center justify-center bg-gray-100">
    <div class="w-full max-w-lg bg-white p-8 rounded-2xl shadow-xl">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Create an Account 🚀</h2>

        <form asp-action="Register" method="post" class="space-y-5">
            <div>
                <label asp-for="Username" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Username" class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none" placeholder="Choose a username" />
                <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Email" type="email" class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Password" type="password" class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="ConfirmPassword" type="password" class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none" placeholder="Re-enter your password" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Role" class="block text-sm font-medium text-gray-700"></label>
                <select asp-for="Role" class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                    <option value="">-- Select Role --</option>
                    <option value="User">Normal User</option>
                    <option value="Entrepreneur">Entrepreneur</option>
                    <option value="Researcher">Researcher</option>
                </select>
                <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded-xl shadow-md hover:bg-indigo-700 transition">
                Register
            </button>
        </form>

        <p class="mt-6 text-center text-sm text-gray-600">
            Already have an account?
            <a asp-action="Login" class="text-indigo-600 font-medium hover:underline">Login</a>
        </p>
    </div>
</div>
