@model DotnetMVCApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="flex min-h-screen items-center justify-center bg-gray-900">
    <div class="w-full max-w-md bg-gray-800 p-8 rounded-2xl shadow-2xl">
        <h2 class="text-2xl font-bold text-center text-white mb-6">Welcome Back 👋</h2>

        <!-- Display Success or Error -->
        @* @if (TempData["Message"] != null)
        {
            <div class="text-green-400 text-center mb-4 font-medium">
                @TempData["Message"]
            </div>
        } *@

        <form asp-action="Login" method="post" class="space-y-5">
            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-300"></label>
                <input asp-for="Email" type="email"
                       class="mt-1 w-full px-4 py-2 border rounded-xl bg-gray-700 text-white shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none
                              @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "border-red-500" : "border-gray-600")"
                       placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-red-400 text-sm"></span>
            </div>

            <!-- Password -->
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-300"></label>
                <input asp-for="Password" type="password"
                       class="mt-1 w-full px-4 py-2 border rounded-xl bg-gray-700 text-white shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none
                              @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "border-red-500" : "border-gray-600")"
                       placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-red-400 text-sm"></span>
            </div>

            <!-- Remember Me / Forgot Password -->
            <div class="flex items-center justify-between">
                <label class="flex items-center space-x-2">
                    <input asp-for="RememberMe" type="checkbox"
                           class="rounded border-gray-600 bg-gray-700 text-indigo-500 focus:ring-indigo-500">
                    <span class="text-sm text-gray-300">Remember me</span>
                </label>
                <a asp-action="ForgotPassword" asp-controller="Account" class="text-sm font-medium text-indigo-400 hover:underline">
                    Forgot password?
                </a>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full bg-indigo-600 text-white py-2 rounded-xl shadow-md hover:bg-indigo-700 transition">
                Login
            </button>
        </form>

        <p class="mt-6 text-center text-sm text-gray-400">
            Don’t have an account?
            <a asp-action="Register" class="text-indigo-400 font-medium hover:underline">Register</a>
        </p>
    </div>
</div>
