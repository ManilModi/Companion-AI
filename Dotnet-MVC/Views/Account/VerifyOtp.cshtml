@model DotnetMVCApp.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Verify OTP";
}

<div class="min-h-screen flex items-center justify-center bg-gray-900">
    <div class="bg-gray-800 shadow-lg rounded-2xl p-8 w-full max-w-md">
        <h2 class="text-2xl font-bold mb-6 text-center text-white">Verify OTP</h2>

        @if (TempData["Message"] != null)
        {
            <div class="mb-4 text-green-400 font-medium text-center">@TempData["Message"]</div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="mb-4 text-red-400 font-medium text-center">@TempData["Error"]</div>
        }

        <div asp-validation-summary="All" class="text-red-400 text-sm mb-4"></div>

        <form asp-action="VerifyOtp" method="post" class="space-y-4">
            <input type="hidden" asp-for="Email" />

            <div>
                <label asp-for="OTP" class="block text-sm font-medium text-gray-200">Enter OTP</label>
                <input asp-for="OTP" maxlength="6"
                       class="mt-1 block w-full rounded-lg border-gray-600 bg-gray-700 text-white shadow-sm
                              focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm p-2" />
                <span asp-validation-for="OTP" class="text-red-400 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 transition">
                Verify OTP
            </button>
        </form>

        <div class="mt-4 text-center">
            <a asp-action="ForgotPassword" class="text-indigo-400 hover:underline">
                Resend OTP / Change Email
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
