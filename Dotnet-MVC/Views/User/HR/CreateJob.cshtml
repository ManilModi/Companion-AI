@model DotnetMVCApp.ViewModels.HR.CreateJobViewModel
@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewData["Title"] = "Create Job";
}

<body class="bg-gray-950 text-gray-100 min-h-screen font-sans">
    <div class="max-w-3xl mx-auto px-6 py-16">
        <h2 class="text-4xl font-bold text-center text-white mb-12 tracking-wide">
            ✨ Create New Job
        </h2>

        <form asp-action="CreateJob" method="post"
              class="bg-gray-900/90 backdrop-blur border border-gray-800 shadow-2xl rounded-2xl p-10 space-y-8">

            <!-- Job Title -->
            <div>
                <label asp-for="JobTitle" class="block text-sm font-semibold text-gray-300">Job Title</label>
                <input asp-for="JobTitle"
                       class="mt-2 w-full rounded-lg bg-gray-800/80 border border-gray-700 text-gray-100 placeholder-gray-500
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 px-4 py-2 transition" />
                <span asp-validation-for="JobTitle" class="text-red-400 text-sm"></span>
            </div>

            <!-- Company -->
            <div>
                <label asp-for="Company" class="block text-sm font-semibold text-gray-300">Company</label>
                <input asp-for="Company"
                       class="mt-2 w-full rounded-lg bg-gray-800/80 border border-gray-700 text-gray-100 placeholder-gray-500
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 px-4 py-2 transition" />
                <span asp-validation-for="Company" class="text-red-400 text-sm"></span>
            </div>

            <!-- Location -->
            <div>
                <label asp-for="Location" class="block text-sm font-semibold text-gray-300">Location</label>
                <input asp-for="Location"
                       class="mt-2 w-full rounded-lg bg-gray-800/80 border border-gray-700 text-gray-100 placeholder-gray-500
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 px-4 py-2 transition" />
                <span asp-validation-for="Location" class="text-red-400 text-sm"></span>
            </div>

            <!-- Job Type -->
            <div>
                <label asp-for="JobType" class="block text-sm font-semibold text-gray-300">Job Type</label>
                <select asp-for="JobType"
                        class="mt-2 w-full rounded-lg bg-gray-800/80 border border-gray-700 text-gray-100
                               focus:outline-none focus:ring-2 focus:ring-indigo-500 px-4 py-2 transition">
                    <option value="">-- Select Job Type --</option>
                    <option>Full Time</option>
                    <option>Part Time</option>
                    <option>Remote</option>
                    <option>Internship</option>
                    <option>Contract</option>
                </select>
                <span asp-validation-for="JobType" class="text-red-400 text-sm"></span>
            </div>

            <!-- Salary Range -->
            <div>
                <label asp-for="SalaryRange" class="block text-sm font-semibold text-gray-300">Salary Range</label>
                <input asp-for="SalaryRange"
                       placeholder="e.g., 5 LPA - 8 LPA"
                       class="mt-2 w-full rounded-lg bg-gray-800/80 border border-gray-700 text-gray-100 placeholder-gray-500
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 px-4 py-2 transition" />
                <span asp-validation-for="SalaryRange" class="text-red-400 text-sm"></span>
            </div>

            <!-- Job Description -->
            <div>
                <label asp-for="JobDescription" class="block text-sm font-semibold text-gray-300">Job Description</label>
                <textarea asp-for="JobDescription" rows="5"
                          class="mt-2 w-full rounded-lg bg-gray-800/80 border border-gray-700 text-gray-100 placeholder-gray-500
                                 focus:outline-none focus:ring-2 focus:ring-indigo-500 px-4 py-2 transition"></textarea>
                <span asp-validation-for="JobDescription" class="text-red-400 text-sm"></span>
            </div>

            <!-- Tech Stacks -->
            <div>
                <label asp-for="TechStacks" class="block text-sm font-semibold text-gray-300">Tech Stacks</label>
                <input asp-for="TechStacks"
                       class="mt-2 w-full rounded-lg bg-gray-800/80 border border-gray-700 text-gray-100 placeholder-gray-500
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 px-4 py-2 transition" />
                <span asp-validation-for="TechStacks" class="text-red-400 text-sm"></span>
            </div>

            <!-- Skills Required -->
            <div>
                <label asp-for="SkillsRequired" class="block text-sm font-semibold text-gray-300">
                    Skills Required (comma-separated)
                </label>
                <input asp-for="SkillsRequired"
                       class="mt-2 w-full rounded-lg bg-gray-800/80 border border-gray-700 text-gray-100 placeholder-gray-500
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 px-4 py-2 transition" />
                <span asp-validation-for="SkillsRequired" class="text-red-400 text-sm"></span>
            </div>

            <!-- Open Time -->
            <div>
                <label asp-for="OpenTime" class="block text-sm font-semibold text-gray-300">Open Time</label>
                <input asp-for="OpenTime" type="datetime-local"
                       class="mt-2 w-full rounded-lg bg-gray-800/80 border border-gray-700 text-gray-100
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 px-4 py-2 transition
                              [color-scheme:dark]" />
                <span asp-validation-for="OpenTime" class="text-red-400 text-sm"></span>
            </div>

            <!-- Close Time -->
            <div>
                <label asp-for="CloseTime" class="block text-sm font-semibold text-gray-300">Close Time</label>
                <input asp-for="CloseTime" type="datetime-local"
                       class="mt-2 w-full rounded-lg bg-gray-800/80 border border-gray-700 text-gray-100
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 px-4 py-2 transition
                              [color-scheme:dark]" />
                <span asp-validation-for="CloseTime" class="text-red-400 text-sm"></span>
            </div>

            <!-- Submit Button -->
            <div class="pt-6">
                <button type="submit"
                        class="w-full px-6 py-3 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500
                               text-white font-bold rounded-xl shadow-lg shadow-pink-500/20
                               hover:scale-105 transform transition duration-300 ease-in-out
                               focus:outline-none focus:ring-4 focus:ring-pink-500/50">
                    🚀 Create Job
                </button>
            </div>
        </form>
    </div>
</body>
