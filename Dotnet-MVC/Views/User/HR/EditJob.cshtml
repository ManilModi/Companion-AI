@model DotnetMVCApp.ViewModels.HR.CreateJobViewModel
@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewData["Title"] = "Edit Job";
}

<div class="max-w-3xl mx-auto px-4 py-12">
    <h2 class="text-3xl font-extrabold text-white mb-8 text-center">✏️ Edit Job</h2>

    <form asp-action="EditJob" asp-route-jobId="@Model.JobId" method="post"
          class="bg-gray-900 shadow-2xl rounded-2xl p-8 space-y-6 border border-gray-700">

        <input type="hidden" asp-for="JobId" />

        <!-- Job Title -->
        <div>
            <label asp-for="JobTitle" class="block text-sm font-medium text-gray-300">Job Title</label>
            <input asp-for="JobTitle"
                   class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-gray-100
                          focus:border-indigo-500 focus:ring-2 focus:ring-indigo-400 px-4 py-2 transition" />
            <span asp-validation-for="JobTitle" class="text-red-400 text-sm"></span>
        </div>

        <!-- Company -->
        <div>
            <label asp-for="Company" class="block text-sm font-medium text-gray-300">Company</label>
            <input asp-for="Company"
                   class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-gray-100
                          focus:border-indigo-500 focus:ring-2 focus:ring-indigo-400 px-4 py-2 transition" />
            <span asp-validation-for="Company" class="text-red-400 text-sm"></span>
        </div>

        <!-- Location -->
        <div>
            <label asp-for="Location" class="block text-sm font-medium text-gray-300">Location</label>
            <input asp-for="Location"
                   class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-gray-100
                          focus:border-indigo-500 focus:ring-2 focus:ring-indigo-400 px-4 py-2 transition" />
            <span asp-validation-for="Location" class="text-red-400 text-sm"></span>
        </div>

        <!-- Job Type -->
        <div>
            <label asp-for="JobType" class="block text-sm font-medium text-gray-300">Job Type</label>
            <select asp-for="JobType"
                    class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-gray-100
                           focus:border-indigo-500 focus:ring-2 focus:ring-indigo-400 px-4 py-2 transition">
                <option value="">-- Select Job Type --</option>
                <option value="Full Time">Full Time</option>
                <option value="Part Time">Part Time</option>
                <option value="Remote">Remote</option>
                <option value="Internship">Internship</option>
                <option value="Contract">Contract</option>
            </select>
            <span asp-validation-for="JobType" class="text-red-400 text-sm"></span>
        </div>

        <!-- Salary Range -->
        <div>
            <label asp-for="SalaryRange" class="block text-sm font-medium text-gray-300">Salary Range</label>
            <input asp-for="SalaryRange"
                   placeholder="e.g., 5 LPA - 8 LPA"
                   class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-gray-100
                          focus:border-indigo-500 focus:ring-2 focus:ring-indigo-400 px-4 py-2 transition" />
            <span asp-validation-for="SalaryRange" class="text-red-400 text-sm"></span>
        </div>

        <!-- Job Description -->
        <div>
            <label asp-for="JobDescription" class="block text-sm font-medium text-gray-300">Job Description</label>
            <textarea asp-for="JobDescription" rows="5"
                      class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-gray-100
                             focus:border-indigo-500 focus:ring-2 focus:ring-indigo-400 px-4 py-2 transition"></textarea>
            <span asp-validation-for="JobDescription" class="text-red-400 text-sm"></span>
        </div>

        <!-- Tech Stacks -->
        <div>
            <label asp-for="TechStacks" class="block text-sm font-medium text-gray-300">Tech Stacks</label>
            <input asp-for="TechStacks"
                   class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-gray-100
                          focus:border-indigo-500 focus:ring-2 focus:ring-indigo-400 px-4 py-2 transition" />
            <span asp-validation-for="TechStacks" class="text-red-400 text-sm"></span>
        </div>

        <!-- Skills Required -->
        <div>
            <label asp-for="SkillsRequired" class="block text-sm font-medium text-gray-300">
                Skills Required (comma-separated)
            </label>
            <input asp-for="SkillsRequired"
                   class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-gray-100
                          focus:border-indigo-500 focus:ring-2 focus:ring-indigo-400 px-4 py-2 transition" />
            <span asp-validation-for="SkillsRequired" class="text-red-400 text-sm"></span>
        </div>

        <!-- Open Time -->
        <div>
            <label asp-for="OpenTime" class="block text-sm font-medium text-gray-300">Open Time</label>
            <input asp-for="OpenTime" type="datetime-local"
                   class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-gray-100
                          focus:border-indigo-500 focus:ring-2 focus:ring-indigo-400 px-4 py-2 transition
                          [color-scheme:dark]" />
            <span asp-validation-for="OpenTime" class="text-red-400 text-sm"></span>
        </div>

        <!-- Close Time -->
        <div>
            <label asp-for="CloseTime" class="block text-sm font-medium text-gray-300">Close Time</label>
            <input asp-for="CloseTime" type="datetime-local"
                   class="mt-2 block w-full rounded-lg bg-gray-800 border border-gray-700 text-gray-100
                          focus:border-indigo-500 focus:ring-2 focus:ring-indigo-400 px-4 py-2 transition
                          [color-scheme:dark]" />
            <span asp-validation-for="CloseTime" class="text-red-400 text-sm"></span>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
            <button type="submit"
                    class="w-full px-6 py-3 bg-gradient-to-r from-yellow-500 to-orange-500
                           text-white font-semibold rounded-xl shadow-md
                           hover:from-yellow-600 hover:to-orange-600
                           focus:outline-none focus:ring-4 focus:ring-yellow-300 transition">
                💾 Save Changes
            </button>
        </div>
    </form>
</div>
