@model IEnumerable<DotnetMVCApp.ViewModels.HR.ApplicantViewModel>
@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewData["Title"] = "Applicants";
}

<h2 class="text-2xl font-bold mb-6">Applicants</h2>

<div class="overflow-x-auto">
    <table class="min-w-full border border-gray-200 divide-y divide-gray-200 rounded-lg shadow-sm">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Email</th>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Applied On</th>
                <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Feedback</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var applicant in Model)
            {
                <tr class="hover:bg-gray-50 transition">
                    <td class="px-6 py-4 text-sm text-gray-800">@applicant.Email</td>
                    <td class="px-6 py-4 text-sm text-gray-600">@applicant.AppliedOn.ToShortDateString()</td>
                    <td class="px-6 py-4 text-sm text-gray-600">@applicant.Feedback</td>
                </tr>
            }
        </tbody>
    </table>
</div>
