@model IEnumerable<DotnetMVCApp.ViewModels.HR.JobListingViewModel>
@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewData["Title"] = "Job Listings";
}

<h2 class="text-2xl font-bold mb-6 text-white text-center">🗂️ Job Listings</h2>

<div class="space-y-4 text-gray-100">
    @foreach (var job in Model)
    {
        <div class="border border-gray-700 rounded-lg p-6 bg-gray-900 shadow-lg">
            <!-- Basic Info -->
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-lg font-semibold text-white">@job.JobTitle</h3>
                    <p class="text-sm text-gray-400">Company: @job.Company</p>
                    <p class="text-sm text-gray-400">Open: @job.OpenTime.ToShortDateString()</p>
                    <p class="text-sm text-gray-400">Close: @job.CloseTime.ToShortDateString()</p>
                </div>

                <div class="flex items-center gap-3">
                    <span class="px-2 py-1 rounded text-xs font-medium
                            @(job.Status == "Active" ? "bg-green-600/20 text-green-400" : "bg-red-600/20 text-red-400")">
                        @job.Status
                    </span>

                    <button type="button"
                            id="toggleBtn-@job.JobId"
                            class="text-indigo-400 text-sm hover:underline focus:outline-none"
                            onclick="toggleJobCard(@job.JobId)">
                        Show More
                    </button>
                </div>
            </div>

            <!-- Hidden card for details -->
            <div id="jobCard-@job.JobId" class="mt-4 hidden">
                <div class="bg-gray-800 border border-gray-700 rounded-lg p-6 shadow-inner">
                    <h4 class="text-xl font-semibold text-white mb-4">📄 Job Details</h4>

                    <div class="grid grid-cols-2 gap-4 text-sm text-gray-300 mb-4">
                        <p><strong>Company:</strong> @job.Company</p>
                        <p><strong>Location:</strong> @job.Location</p>
                        <p><strong>Job Type:</strong> @job.JobType</p>
                        <p><strong>Salary Range:</strong> @job.SalaryRange</p>
                    </div>

                    <div class="mb-4">
                        <p class="text-sm font-semibold text-gray-300 mb-1">Description:</p>
                        <p class="text-sm text-gray-400">@job.JobDescription</p>
                    </div>

                    @* <div class="mb-4">
                        <p class="text-sm font-semibold text-gray-300 mb-1">Skills Required:</p>
                        <p class="text-sm text-gray-400">@job.SkillsRequired</p>
                    </div> *@

                    <div class="mb-4">
                        <p class="text-sm font-semibold text-gray-300 mb-1">Tech Stacks:</p>
                        <p class="text-sm text-gray-400">@job.TechStacks</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex items-center gap-3 mt-6">
                        <a asp-action="Applicants" asp-route-jobId="@job.JobId"
                           class="inline-block px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm transition">
                            View Applicants
                        </a>

                        <a asp-action="EditJob" asp-route-jobId="@job.JobId"
                           class="inline-block px-4 py-2 bg-yellow-500 hover:bg-yellow-600 text-white rounded-lg text-sm transition">
                            Edit
                        </a>

                        <form asp-action="DeleteJob" asp-route-jobId="@job.JobId" method="post" class="inline">
                            <!-- Delete Button -->
                            <button type="button"
                                    onclick="openDeleteModal(@job.JobId)"
                                    class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg text-sm transition">
                                Delete
                            </button>

                            <!-- Delete Confirmation Modal (Dark Theme) -->
                            <div id="deleteModal-@job.JobId" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center hidden z-50">
                                <div class="bg-gray-900 text-gray-200 rounded-2xl shadow-xl w-96 p-6">
                                    <h2 class="text-xl font-bold text-white mb-4">⚠️ Confirm Delete</h2>
                                    <p class="text-gray-300 mb-6">Are you sure you want to delete this job? This action cannot be undone.</p>
                                    <div class="flex justify-end space-x-3">
                                        <!-- ✅ Cancel is now type="button" -->
                                        <button type="button"
                                                onclick="closeDeleteModal(@job.JobId)"
                                                class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-gray-200 rounded-lg">
                                            Cancel
                                        </button>

                                        <form id="deleteForm-@job.JobId" method="post" asp-action="DeleteJob" asp-route-jobId="@job.JobId">
                                            <button type="submit"
                                                    class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <!-- ✅ NEW BUTTON for Feedbacks -->
                        <a asp-controller="Feedback"
                           asp-action="JobFeedbacks"
                           asp-route-jobId="@job.JobId"
                           class="inline-block px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg text-sm transition">
                            View Feedbacks
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleJobCard(jobId) {
            const card = document.getElementById(`jobCard-${jobId}`);
            const btn = document.getElementById(`toggleBtn-${jobId}`);
            if (!card || !btn) return;

            const currentlyVisible = card.classList.contains("block");
            if (currentlyVisible) {
                card.classList.remove("block");
                card.classList.add("hidden");
                btn.innerText = "Show More";
                return;
            }

            document.querySelectorAll('[id^="jobCard-"]').forEach(el => {
                el.classList.remove("block");
                el.classList.add("hidden");
            });

            document.querySelectorAll('[id^="toggleBtn-"]').forEach(el => el.innerText = "Show More");

            card.classList.remove("hidden");
            card.classList.add("block");
            btn.innerText = "Show Less";

            card.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        function openDeleteModal(jobId) {
            const modal = document.getElementById(`deleteModal-${jobId}`);
            if (!modal) return;
            modal.classList.remove('hidden');
        }

        function closeDeleteModal(jobId) {
            const modal = document.getElementById(`deleteModal-${jobId}`);
            if (!modal) return;
            modal.classList.add('hidden');
        }
    </script>
}
