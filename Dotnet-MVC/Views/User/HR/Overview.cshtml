@model DotnetMVCApp.ViewModels.HR.OverviewViewModel
@{
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    ViewData["Title"] = "HR Dashboard - Overview";
}

<h2 class="text-2xl font-bold mb-6 text-white text-center">📊 Overview</h2>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Active Jobs -->
    <div class="bg-gray-900 rounded-xl shadow-md p-6 text-center border border-gray-700">
        <h4 class="text-3xl font-bold text-blue-400">@Model.ActiveJobs</h4>
        <p class="mt-2 text-gray-300 font-medium">Active Jobs</p>
    </div>

    <!-- Total Applicants -->
    <div class="bg-gray-900 rounded-xl shadow-md p-6 text-center border border-gray-700">
        <h4 class="text-3xl font-bold text-green-400">@Model.TotalApplicants</h4>
        <p class="mt-2 text-gray-300 font-medium">Total Applicants</p>
    </div>

    <!-- Upcoming Interviews -->
    <div class="bg-gray-900 rounded-xl shadow-md p-6 text-center border border-gray-700">
        <h4 class="text-3xl font-bold text-purple-400">@Model.UpcomingInterviews</h4>
        <p class="mt-2 text-gray-300 font-medium">Upcoming Interviews</p>
    </div>
</div>
