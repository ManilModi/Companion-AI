<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HR Dashboard</title>

    <!-- ✅ Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- ✅ FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-950 text-gray-100">
    <div class="flex">
        <!-- Sidebar (Fixed) -->
        <aside class="fixed top-0 left-0 h-screen w-64 bg-gray-900 text-white flex flex-col shadow-lg">
            <!-- Brand -->
            <div class="p-6 border-b border-gray-800">
                <h4 class="text-2xl font-bold tracking-wide">HR Panel</h4>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
                <a class="flex items-center px-3 py-2 rounded-lg hover:bg-gray-800 transition"
                   asp-action="Overview">
                    <i class="fas fa-home w-5 mr-3 text-gray-400"></i> Overview
                </a>
                <a class="flex items-center px-3 py-2 rounded-lg hover:bg-gray-800 transition"
                   asp-action="CreateJob">
                    <i class="fas fa-plus-circle w-5 mr-3 text-gray-400"></i> Create Job
                </a>
                <a class="flex items-center px-3 py-2 rounded-lg hover:bg-gray-800 transition"
                   asp-action="JobListings">
                    <i class="fas fa-briefcase w-5 mr-3 text-gray-400"></i> Job Listings
                </a>
            </nav>

            <!-- ✅ Logout Button at Bottom -->
            <div class="p-4 border-t border-gray-800">
                <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="w-full px-3 py-2 bg-red-600 hover:bg-red-700 text-white
                                   rounded-lg text-sm font-semibold transition flex items-center justify-center">
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 ml-64 p-8 bg-gray-950 min-h-screen">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
