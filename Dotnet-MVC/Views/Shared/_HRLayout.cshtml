@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HR Dashboard</title>

    <!-- ✅ Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- ✅ FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>
        /* Custom scrollbar for sidebar */
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: #1f2937; /* gray-800 */
        }

        ::-webkit-scrollbar-thumb {
            background: #374151; /* gray-700 */
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #4b5563; /* gray-600 */
            }
    </style>
</head>
<body class="bg-gray-950 text-gray-100 font-sans">
    <div class="flex">
        <!-- Sidebar (Fixed) -->
        <aside class="fixed top-0 left-0 h-screen w-64 bg-gray-900 text-white flex flex-col shadow-xl border-r border-gray-800">
            <!-- Brand -->
            <div class="p-6 border-b border-gray-800">
                <h4 class="text-2xl font-bold tracking-wide text-indigo-400">⚡ HR Panel</h4>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
                <a class="flex items-center px-3 py-2 rounded-lg hover:bg-gray-800 hover:text-indigo-400 transition"
                   asp-controller="HR" asp-action="Overview">
                    <i class="fas fa-home w-5 mr-3 text-gray-400 group-hover:text-indigo-400"></i> Overview
                </a>
                <a class="flex items-center px-3 py-2 rounded-lg hover:bg-gray-800 hover:text-indigo-400 transition"
                   asp-controller="HR" asp-action="CreateJob">
                    <i class="fas fa-plus-circle w-5 mr-3 text-gray-400"></i> Create Job
                </a>
                <a class="flex items-center px-3 py-2 rounded-lg hover:bg-gray-800 hover:text-indigo-400 transition"
                   asp-controller="HR" asp-action="JobListings">
                    <i class="fas fa-briefcase w-5 mr-3 text-gray-400"></i> Job Listings
                </a>
                <a class="flex items-center px-3 py-2 rounded-lg hover:bg-gray-800 hover:text-indigo-400 transition"
                   asp-controller="Account" asp-action="Profile" asp-route-id="@User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier)">
                    <i class="fas fa-user w-5 mr-3 text-gray-400"></i> Account
                </a>
            </nav>

            <!-- ✅ Logout Button at Bottom -->
            <div class="p-4 border-t border-gray-800">
                <form asp-controller="Account" asp-action="Logout" method="post" class="inline" id="logoutForm">
                    @Html.AntiForgeryToken()
                    <button type="button" id="logoutBtn"
                            class="w-full px-3 py-2 bg-red-600 hover:bg-red-700 text-white
                                   rounded-lg text-sm font-semibold transition flex items-center justify-center shadow-md">
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </button>
                </form>
            </div>

            <!-- Logout Confirmation Modal -->
            <div id="logoutModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
                <div class="bg-gray-800 p-6 rounded-xl shadow-xl max-w-sm w-full text-center">
                    <h3 class="text-lg font-semibold text-white mb-4">Confirm Logout</h3>
                    <p class="text-gray-300 mb-6">Are you sure you want to logout?</p>
                    <div class="flex justify-center space-x-4">
                        <button id="confirmLogout" class="px-4 py-2 bg-red-600 hover:bg-red-700 rounded-md text-white font-medium">Yes</button>
                        <button id="cancelLogout" class="px-4 py-2 bg-gray-600 hover:bg-gray-700 rounded-md text-white font-medium">Cancel</button>
                    </div>
                </div>
            </div>

        </aside>

        <!-- Main Content -->
        <main class="flex-1 ml-64 p-10 bg-gray-950 min-h-screen flex flex-col">

            <div class="bg-gray-900 shadow-lg rounded-xl p-8 border border-gray-800 flex-grow">
                @RenderBody()
            </div>

            <footer class="mt-10 bg-gray-900 rounded-t-xl border-t border-gray-800">
                <div class="mx-auto w-full max-w-screen-xl p-8 py-10 lg:py-12">
                    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
                        <div class="mb-6 md:mb-0">
                            <a href="#" class="flex items-center">
                                <h4 class="text-2xl font-bold tracking-wide text-indigo-400">⚡ HR Panel</h4>
                            </a>
                            <p class="mt-4 text-gray-400 text-sm">
                                Streamlining human resources with an intuitive and powerful dashboard.
                            </p>
                            <div class="flex mt-6 space-x-5">
                                <a href="#" class="text-gray-500 hover:text-indigo-400 transition">
                                    <i class="fab fa-linkedin fa-lg"></i>
                                    <span class="sr-only">LinkedIn profile</span>
                                </a>
                                <a href="#" class="text-gray-500 hover:text-indigo-400 transition">
                                    <i class="fab fa-twitter fa-lg"></i>
                                    <span class="sr-only">Twitter page</span>
                                </a>
                                <a href="#" class="text-gray-500 hover:text-indigo-400 transition">
                                    <i class="fab fa-github fa-lg"></i>
                                    <span class="sr-only">GitHub account</span>
                                </a>
                            </div>
                        </div>

                        <div>
                            <h2 class="mb-6 text-sm font-semibold text-gray-200 uppercase tracking-wider">Quick Links</h2>
                            <ul class="text-gray-400 font-medium space-y-3">
                                <li><a href="#" class="hover:text-indigo-400 transition">Overview</a></li>
                                <li><a href="#" class="hover:text-indigo-400 transition">Create Job</a></li>
                                <li><a href="#" class="hover:text-indigo-400 transition">Job Listings</a></li>
                                <li><a href="#" class="hover:text-indigo-400 transition">Account</a></li>
                            </ul>
                        </div>

                        <div>
                            <h2 class="mb-6 text-sm font-semibold text-gray-200 uppercase tracking-wider">Legal</h2>
                            <ul class="text-gray-400 font-medium space-y-3">
                                <li><a href="#" class="hover:text-indigo-400 transition">Privacy Policy</a></li>
                                <li><a href="#" class="hover:text-indigo-400 transition">Terms of Service</a></li>
                                <li><a href="#" class="hover:text-indigo-400 transition">Contact Us</a></li>
                            </ul>
                        </div>
                    </div>

                    <hr class="my-6 border-gray-700 sm:mx-auto lg:my-8" />
                    <div class="text-center">
                        <span class="text-sm text-gray-500">
                            &copy; @DateTime.Now.Year All Rights Reserved.
                        </span>
                    </div>
                </div>
            </footer>

        </main>
    </div>

    <script>
        // Logout modal logic
        const logoutBtn = document.getElementById("logoutBtn");
        const logoutModal = document.getElementById("logoutModal");
        const cancelLogout = document.getElementById("cancelLogout");
        const confirmLogout = document.getElementById("confirmLogout");
        const logoutForm = document.getElementById("logoutForm");

        logoutBtn.addEventListener("click", () => {
            logoutModal.classList.remove("hidden");
            logoutModal.classList.add("flex");
        });

        cancelLogout.addEventListener("click", () => {
            logoutModal.classList.add("hidden");
            logoutModal.classList.remove("flex");
        });

        confirmLogout.addEventListener("click", () => {
            logoutForm.submit();
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
