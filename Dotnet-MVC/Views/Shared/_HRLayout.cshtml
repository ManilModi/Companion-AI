<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HR Dashboard</title>

    <!-- ✅ Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-gray-900 text-white flex flex-col">
            <div class="p-6 border-b border-gray-700">
                <h4 class="text-xl font-bold">HR Panel</h4>
            </div>

            <nav class="flex-1 p-4 space-y-2">
                <a class="block px-3 py-2 rounded hover:bg-gray-700 transition" asp-action="Overview">Overview</a>
                <a class="block px-3 py-2 rounded hover:bg-gray-700 transition" asp-action="CreateJob">Create Job</a>
                <a class="block px-3 py-2 rounded hover:bg-gray-700 transition" asp-action="JobListings">Job Listings</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-8">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
