@* _CandidateLayout.cshtml *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Candidate Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white">

    <!-- Top Header -->
    <header class="bg-gradient-to-r from-gray-900 via-indigo-900 to-purple-900 border-b border-gray-800 fixed top-0 left-0 right-0 z-50">
        <div class="max-w-full px-6 py-3 flex justify-between items-center">
            <!-- Left: Logo -->
            <div class="flex items-center space-x-2">
                <span class="text-xl font-bold text-white">Companion AI</span>
            </div>

            <!-- Center: Navigation -->
            <nav class="hidden md:flex space-x-6">
                <a href="/" class="text-gray-300 hover:text-white transition">Home</a>
                <a href="/Features" class="text-gray-300 hover:text-white transition">Features</a>
                <a href="/Contact" class="text-gray-300 hover:text-white transition">Contact</a>
                <a asp-controller="Candidate" asp-action="Dashboard" class="text-gray-300 hover:text-white transition">Candidate</a>
            </nav>

            <!-- Right: Actions -->
            <div class="flex items-center space-x-4">
                <!-- Candidate badge -->
                <span class="px-3 py-1 rounded-full text-sm bg-green-700 text-white">Candidate</span>

                <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="px-3 py-1 bg-red-600 hover:bg-red-700 text-white rounded-md text-sm font-medium transition">
                        <i class="fas fa-sign-out-alt mr-1"></i> Logout
                    </button>
                </form>
            </div>
        </div>
    </header>

    <div class="flex pt-16 min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-gray-800 fixed top-16 bottom-0 left-0 flex flex-col shadow-lg">
            <nav class="flex-1 px-4 py-6 space-y-2">
                <a asp-controller="Candidate" asp-action="Dashboard"
                   class="flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 transition
                          @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "bg-indigo-600 text-white font-semibold" : "text-gray-300")">
                    <i class="fas fa-user mr-2"></i> Profile
                </a>

                <a asp-controller="Candidate" asp-action="JobSearch"
                   class="flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 transition
                          @(ViewData["ActivePage"]?.ToString() == "JobSearch" ? "bg-indigo-600 text-white font-semibold" : "text-gray-300")">
                    <i class="fas fa-briefcase mr-2"></i> Job Search
                </a>

                <a asp-controller="Candidate" asp-action="JobMarket"
                   class="flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 transition
          @(ViewData["ActivePage"]?.ToString() == "JobMarket" ? "bg-indigo-600 text-white font-semibold" : "text-gray-300")">
                    <i class="fas fa-chart-line mr-2"></i> Job Insights
                </a>

                <a asp-controller="Candidate" asp-action="ThirdPartyJobs"
                   class="flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 transition
                          @(ViewData["ActivePage"]?.ToString() == "JobSearch" ? "bg-indigo-600 text-white font-semibold" : "text-gray-300")">
                    <i class="fas fa-briefcase mr-2"></i> Personalized Career Posts
                </a>

                <a class="flex items-center px-4 py-2 rounded-lg hover:bg-gray-700 transition text-gray-300"
                   asp-controller="Account" asp-action="Profile" asp-route-id="@User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier)">
                    <i class="fas fa-user w-5 mr-3 text-gray-400"></i> Account
                </a>
            </nav>
        </aside>

        <!-- Main content -->
        <main class="flex-1 ml-64 p-8">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </main>
    </div>

</body>
</html>
