@* _CandidateLayout.cshtml *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Candidate Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">

</head>
<body class="bg-gray-900 text-white">

    <!-- Top Header -->
    <header class="bg-gradient-to-r from-gray-900 via-indigo-900 to-purple-900 border-b border-gray-800">
        <div class="max-w-full px-6 py-3 flex justify-between items-center">
            <!-- Left: Logo -->
            <div class="flex items-center space-x-2">
                @* <img src="~/images/logo.svg" alt="Companion AI" class="h-7 w-7"> *@
                <span class="text-xl font-bold text-white">Companion AI</span>
            </div>

            <!-- Center: Navigation -->
            <nav class="hidden md:flex space-x-6">
                <a href="/" class="text-gray-300 hover:text-white transition">Home</a>
                <a href="/Features" class="text-gray-300 hover:text-white transition">Features</a>
                <a href="/Contact" class="text-gray-300 hover:text-white transition">Contact</a>
                <a asp-controller="Candidate" asp-action="Dashboard" class="text-gray-300 hover:text-white transition">Candidate</a>
            </nav>

            <!-- Right: Actions -->
            <div class="flex items-center space-x-4">
                <!-- Dark mode toggle -->
                @* <button class="p-2 rounded-full bg-gray-800 hover:bg-gray-700 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M17.293 13.293a8 8 0 01-11.586-11.586A8.001 8.001 0 1017.293 13.293z" />
                    </svg>
                </button> *@

                <!-- Candidate badge -->
                <span class="px-3 py-1 rounded-full text-sm bg-green-700 text-white">Candidate</span>

                <!-- Profile bubble -->
                @* <div class="h-8 w-8 flex items-center justify-center rounded-full bg-purple-600 text-white font-semibold">
                    0
                </div> *@
            </div>
        </div>
    </header>

    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-gray-800 flex flex-col pt-6">
            <nav class="flex-1 px-4 space-y-2">
                <a asp-controller="Candidate" asp-action="Dashboard"
                   class="block px-4 py-2 rounded-lg hover:bg-gray-700 transition">Profile</a>

                <a asp-controller="Candidate" asp-action="JobSearch"
                   class="block px-4 py-2 rounded-lg hover:bg-gray-700 transition">Job Search</a>

                <a href="#" class="block px-4 py-2 rounded-lg hover:bg-gray-700 transition">Job Insights</a>
                <a href="#" class="block px-4 py-2 rounded-lg hover:bg-gray-700 transition">Job Recommendations</a>
                <a href="#" class="block px-4 py-2 rounded-lg hover:bg-gray-700 transition">Career Recommender</a>
            </nav>
        </div>

        <!-- Main content -->
        <div class="flex-1 p-8">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>

</body>
</html>
